{
  "name": "demo",
  "version": "0.0.1",
  "description": "A simple template for Localize training",
  "license": "Private",
  "scripts": {
    "start": "NODE_OPTIONS=--enable-source-maps NODE_PATH=./dist node dist/server.js",
    "build": "pnpm run build:ts",
    "build:ts": "tsc",
    "build:ts:debug": "tsc",
    "watch:ts": "tsc -w --preserveWatchOutput",
    "tscheck": "tsc --project ./tsconfig.json --pretty --rootDir ./",
    "debug:serve": "LOG_LEVEL=debug nodemon --config ./nodemon.json  --inspect=127.0.0.1:9249 dist/server.js",
    "debug:watch": "concurrently --handle-input -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"green.bold\" \"pnpm run watch:ts\" \"pnpm run debug:serve\"",
    "debug": "pnpm run build:ts:debug && pnpm run debug:watch",
    "clear_uploads": "uploads=~/Development/training/imaginary/server/uploads && rm ${uploads}/*",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest"
  },
  "dependencies": {
    "apollo-server-express": "^3.6.1",
    "bcrypt": "^5.0.1",
    "express": "^4.17.2",
    "express-fileupload": "^1.2.1",
    "express-jwt": "^6.1.0",
    "graphql": "^15.8.0",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^6.1.4",
    "pnpm": "^6.24.2",
    "sharp": "^0.29.3",
    "source-map-support": "^0.5.19",
    "tslib": "2.3.0"
  },
  "devDependencies": {
    "@jest/globals": "^27.4.6",
    "@typegoose/typegoose": "^9.4.0",
    "@types/async": "^3.2.5",
    "@types/bcrypt": "^5.0.0",
    "@types/express": "^4.17.13",
    "@types/express-fileupload": "^1.2.0",
    "@types/express-jwt": "^6.0.4",
    "@types/jest": "^27.4.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/node": "*",
    "@types/sharp": "^0.29.5",
    "@types/source-map-support": "^0.5.3",
    "apollo-server-types": "^3.5.0",
    "concurrently": "^5.3.0",
    "dotenv": "^10.0.0",
    "jest": "^27.4.7",
    "nodemon": "^2.0.6",
    "serve": "^11.3.2",
    "ts-jest": "^27.1.2",
    "typegoose": "^5.9.1",
    "typescript": "4.3.5"
  }
}
